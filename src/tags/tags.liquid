---
layout: layouts/main.liquid
pagination:
  data: collections
  size: 1
  alias: tag
  filter: [post, all]
permalink: tags/{{ tag }}/
title: Posts
---

<div class="ui grid">
  <div class="ui row">
    <div class="three wide right aligned column">
      <h1 class="ui page header">
        {{ tag }}
      </h1>
    </div>
  </div>
  {% assign taglist = collections[tag] %}
  {% for post in taglist %}
  <div class="ui row">
    <div class="four wide right aligned column">
      {{ post.date | date: "%b %d, %Y" }}
    </div>
    <div class="twelve wide column">
      <div class="field">
        <div class="ui header">
          <a class="item" href="{{ post.url }}">{{ post.data.title }}</a>
        </div>
      </div>
      <div class="field">
        {%- for tag in post.data.tags -%}
          {%- if tag != "post" -%}
            <a class="ui medium label" href="/tags/{{ tag }}">
              <i>{{ tag }}</i>
            </a>
          {%- endif -%}
        {%- endfor -%}
      </div>
    </div>
  </div>
  {%- endfor -%}
</div>

