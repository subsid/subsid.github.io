---
layout: layouts/main.liquid
title: All Tags
permalink: tags/
---
<div class="ui grid">
  <div class="ui row">
    <div class="two wide column">
    </div>
    <div class="fourteen wide column">
      <h1 class="ui page header">
        {{ title }}
      </h1>
    </div>
  </div>
  <div class="ui row">
    <div class="two wide column">
    </div>
    <div class="ui horizontal list">
      {%- for tag in collections.allTags -%}
        {%- if tag != "post" -%}
          <div class="item">
            <a class="ui medium label" href="/tags/{{ tag }}">
              <i>{{ tag }}</i>
            </a>
          </div>
        {%- endif -%}
      {%- endfor -%}
    </div>
  </div>
</div>

